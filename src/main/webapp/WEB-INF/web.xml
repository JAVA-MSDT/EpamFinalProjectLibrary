<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/jsp/error.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>EpamLibrary</servlet-name>
        <servlet-class>com.epam.library.controller.controller.LibraryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EpamLibrary</servlet-name>
        <url-pattern>/Library</url-pattern>
    </servlet-mapping>
</web-app>
